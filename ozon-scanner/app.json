{
  "expo": {
    "name": "Ozon Barkod",
    "slug": "ozon-scanner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSCameraUsageDescription": "Barkod taramak için kamera izni gerekli"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "CAMERA",
        "VIBRATE"
      ],
      "package": "com.ozon.scanner"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Barkod taramak için kamera izni gerekli"
        }
      ]
    ]
  }
}