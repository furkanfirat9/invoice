// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Şimdilik temel şema, ileride genişletilecek
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(SELLER)
  createdAt DateTime @default(now())
  updatedAt     DateTime @updatedAt
  ozonClientId  String?
  ozonApiKey    String?
  storeName     String?
  orderDocuments OrderDocument[]
  courierHandovers CourierHandover[]
  invoices      Invoice[]
}

enum UserRole {
  SELLER
  CARRIER
}

model Invoice {
  id              String   @id @default(cuid())
  postingNumber   String   @unique
  invoiceNumber   String
  amount          Float
  productCategory String
  countryOfOrigin String
  invoiceDate     DateTime
  currencyType    String   @default("USD")
  gtipCode        String
  pdfUrl          String?  // Vercel Blob URL
  
  // Owner - Faturayı oluşturan satıcı
  userId          String?  // Optional çünkü mevcut kayıtlarda yok
  user            User?    @relation(fields: [userId], references: [id])
  
  // ETGB Alanları
  etgbPdfUrl      String?
  etgbDate        DateTime?
  etgbNumber      String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Sipariş Belgeleri (Belgeler sayfası için)
model OrderDocument {
  id              String   @id @default(cuid())
  postingNumber   String   @unique  // Ozon gönderi numarası
  userId          String   // Belgeyi yükleyen kullanıcı

  // Alış Faturası
  alisFaturaNo      String?
  alisFaturaTarihi  DateTime?
  alisSaticiUnvani  String?
  alisSaticiVkn     String?
  alisKdvHaricTutar Float?
  alisKdvTutari     Float?
  alisUrunBilgisi   String?
  alisUrunAdedi     String?
  alisPdfUrl        String?

  // Satış Faturası
  satisFaturaTarihi DateTime?
  satisFaturaNo     String?
  satisAliciAdSoyad String?
  satisPdfUrl       String?

  // ETGB
  etgbNo          String?
  etgbTutar       Float?
  etgbDovizCinsi  String?  // USD veya EUR
  etgbTarihi      DateTime?  // ETGB Tarihi
  etgbFaturaTarihi DateTime? // ETGB'deki Fatura Tarihi
  etgbPdfUrl      String?

  // Sipariş Notu
  note            String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])
}

// Kurye Teslim Kaydı
model CourierHandover {
  id            String   @id @default(cuid())
  handoverDate  DateTime @default(now())
  note          String?
  imageUrl      String?  // Teslimat görseli (Vercel Blob URL)
  duplicateLogs Json?    // Mükerrer okunan barkodların bilgisi (Barcode, OriginalID, Date)
  userId        String
  
  barcodes      HandoverBarcode[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id])
}

// Teslim Edilen Barkod
model HandoverBarcode {
  id            String   @id @default(cuid())
  barcode       String
  scannedAt     DateTime @default(now())
  
  handoverId    String
  handover      CourierHandover @relation(fields: [handoverId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  
  @@unique([barcode, handoverId])
}

// İptal Takip Durumları
enum CancellationStatus {
  PENDING_NOTIFICATION  // Satıcı henüz kargoya bildirmedi
  PENDING_WAREHOUSE     // Kargoya bildirildi, depo bekleniyor
  IN_WAREHOUSE          // Kargo depoda olduğunu onayladı
}

// İptal Ürün Takibi
model CancellationTracking {
  id              String   @id @default(cuid())
  postingNumber   String   @unique  // Ozon sipariş numarası
  
  // İlişkili kullanıcılar
  sellerId        String   // Satıcı
  
  // Ürün bilgileri (cache)
  productName     String?
  productImage    String?
  sku             String?
  quantity        Int      @default(1)
  cancelDate      DateTime?
  cancelReason    String?
  
  // Durum takibi
  status          CancellationStatus @default(PENDING_NOTIFICATION)
  
  // Zaman damgaları
  notifiedAt      DateTime?  // Kargoya bildirildiği zaman
  confirmedAt     DateTime?  // Kargo tarafından onaylandığı zaman
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
